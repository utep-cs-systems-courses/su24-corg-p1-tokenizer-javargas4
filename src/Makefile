# Compiler flags: -g for debug information, -O3 for optimization
CFLAGS=-g -O3

# The first target is built by default
all: mytokenizer

# Include file dependencies
tokenizer.o: tokenizer.h
interface.o: tokenizer.h test_functions.h history.h
test_functions.o: tokenizer.h test_functions.h
history.o: history.h tokenizer.h

# $@=target, $^=prerequisites
mytokenizer: tokenizer.o interface.o test_functions.o history.o
	cc -o $@ $^ $(CFLAGS)

# Deletes files generated by compilation
clean:
	rm -f *.o mytokenizer
